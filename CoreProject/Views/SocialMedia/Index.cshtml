@model List<EntityLayer.Concrete.SocialMedia>
@{
    ViewData["Title"] = "Sosyal Media";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col">Sosyal Medya</th>
                <th scope="col">Adres</th>
                <th scope="col">İkon</th>
                <th scope="col">Düzenle</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Url
                    </td>
                    <td>
                        @item.Icon
                    </td>
                    <td>
                        <a href="@Url.Action("EditSocialMedia", "SocialMedia", new { id = item.Id })" class="btn btn-sm btn-primary">Düzenle</a>
                    </td>
                    <td>
                        <a href="@Url.Action("DeleteSocialMedia", "SocialMedia", new { id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


