<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
    <div class="bg-light my-2 p-3 pt-2">
        @using (Html.BeginForm("SendMessage", "MainPage", FormMethod.Post))
        {
            <div class="form-group my-2">
                <label class="form-label fw-bolder">Ad</label>
                <input class="form-control" type="text" name="Name" required>
            </div>
            <div class="form-group my-2">
                <label class="form-label fw-bolder">Email</label>
                <input class="form-control" type="email" name="EMail" required>
            </div>
            <div class="form-group my-2">
                <label class="form-label fw-bolder">Mesaj</label>
                <textarea class="form-control" style="resize: none;" name="Content" rows="4" required></textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Gönder</button>
        }
    </div>
</div>
