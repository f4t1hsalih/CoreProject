@{
    ViewData["Title"] = "Yetenek Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" class="card-body px-lg-5 py-lg-5">
    <div class="form-group">
        <div class="input-group input-group-merge input-group-alternative mb-3">
            <input class="form-control" name="Title" placeholder="Yetenek" type="text" required="required">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group input-group-merge input-group-alternative mb-3">
            <input class="form-control" name="Value" placeholder="Seviye (0-100)" type="number" required="required">
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary mt-4">Ekle</button>
    </div>
</form>
