@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @class = "card-body px-lg-5 py-lg-5" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Title, "Başlık", new { @class = "form-label" })
        <div class="input-group input-group-alternative mb-3">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Başlık" })
        </div>
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Açıklama", new { @class = "form-label" })
        <div class="input-group input-group-alternative mb-3">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama", rows = 6 })
        </div>
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Email, "Email", new { @class = "form-label" })
        <div class="input-group input-group-alternative mb-3">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
        </div>
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Phone, "Telefon Numarası", new { @class = "form-label" })
        <div class="input-group input-group-alternative mb-3">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Telefon Numarası(XXX XXX XX XX)", type = "tel" })
        </div>
        @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary mt-4">Kaydet</button>
    </div>
}