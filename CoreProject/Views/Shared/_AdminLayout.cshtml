@{
    Layout = null;
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <link rel="stylesheet" href="~/Templates/ArgonTemp/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/Templates/ArgonTemp/assets/vendor/@@fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <link rel="stylesheet" href="~/Templates/ArgonTemp/assets/css/argon.css?v=1.2.0" type="text/css">
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />

</head>

<body>
    <!-- Sidenav -->
    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header align-items-center">
                <a class="navbar-brand display-4 fw-bold text-primary" href="dashboard.html">
                    Core Projesi
                </a>
            </div>
            <hr class="my-1">
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Nav items -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Dashboard" ? "active" : "")" href="dashboard.html">
                                <i class="ni ni-tv-2 text-primary"></i>
                                <span class="nav-link-text">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Feature" ? "active" : "")" href="/Feature/Index/">
                                <i class="ni ni-planet text-orange"></i>
                                <span class="nav-link-text">Öne Çıkan</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Skill" ? "active" : "")" href="/Skill/Index/">
                                <i class="ni ni-atom text-primary"></i>
                                <span class="nav-link-text">Yetenekler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "About" ? "active" : "")" href="/About/Index/">
                                <i class="ni ni-single-02 text-yellow"></i>
                                <span class="nav-link-text">Hakkımda</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Service" ? "active" : "")" href="#">
                                <i class="ni ni-briefcase-24 text-default"></i>
                                <span class="nav-link-text">Hizmetler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Portfolio" ? "active" : "")" href="/Portfolio/Index/">
                                <i class="ni ni-spaceship text-info"></i>
                                <span class="nav-link-text">Projeler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Experience" ? "active" : "")" href="/Experience/Index/">
                                <i class="ni ni-user-run text-pink"></i>
                                <span class="nav-link-text">Deneyimler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Reference" ? "active" : "")" href="#">
                                <i class="ni ni-satisfied text-purple"></i>
                                <span class="nav-link-text">Referanslar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Contact" ? "active" : "")" href="#">
                                <i class="ni ni-tie-bow text-blue"></i>
                                <span class="nav-link-text">İletişim</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Message" ? "active" : "")" href="#">
                                <i class="ni ni-email-83 text-red"></i>
                                <span class="nav-link-text">Mesajlar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Index" && currentController == "Statistics" ? "active" : "")" href="#">
                                <i class="ni ni-chart-pie-35 text-green"></i>
                                <span class="nav-link-text">İstatistikler</span>
                            </a>
                        </li>
                    </ul>
                    <hr class="my-3">
                </div>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content" id="panel">
        <!-- Topnav -->
        <nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Search form -->
                    <form class="navbar-search navbar-search-light form-inline mr-sm-3" id="navbar-search-main">
                        <div class="form-group mb-0">
                            <div class="input-group input-group-alternative input-group-merge">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                                </div>
                                <input class="form-control" placeholder="Ara" type="text">
                            </div>
                        </div>
                        <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </form>
                    <!-- Navbar links -->
                    <ul class="navbar-nav align-items-center ml-md-auto ">
                        <li class="nav-item dropdown">
                            <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="media align-items-center">
                                    <span class="avatar avatar-sm rounded-circle">
                                        <img alt="Image placeholder" src="~/Templates/ArgonTemp/assets/img/theme/team-4.jpg">
                                    </span>
                                    <div class="media-body  ml-2  d-none d-lg-block">
                                        <span class="mb-0 text-sm  font-weight-bold">*** ***</span>
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-menu  dropdown-menu-right ">
                                <div class="dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">Merhaba!</h6>
                                </div>
                                <a href="#!" class="dropdown-item">
                                    <i class="ni ni-single-02"></i>
                                    <span>Profil</span>
                                </a>
                                <a href="#!" class="dropdown-item">
                                    <i class="ni ni-settings-gear-65"></i>
                                    <span>Ayarlar</span>
                                </a>
                                <a href="#!" class="dropdown-item">
                                    <i class="ni ni-support-16"></i>
                                    <span>Yardım</span>
                                </a>
                                <div class="dropdown-divider"></div>
                                <a href="#!" class="dropdown-item">
                                    <i class="ni ni-button-power"></i>
                                    <span>Çıkış</span>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Header -->
        <div class="header bg-primary pb-6">
            <div class="container-fluid">
                <div class="header-body">
                    <div class="row align-items-center py-4">
                        <div class="col-lg-6 col-7">
                            <h6 class="h2 text-white d-inline-block mb-0">@ViewBag.PageName</h6>
                        </div>
                        <div class="col-lg-6 col-5 text-right">
                            <a href="@ViewBag.NewButton" class="btn btn-neutral">Yeni</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--6">
            <div class="row">
                <div class="col">
                    <div class="card border-0">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <footer class="footer footerButton pt-0 ">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-lg-6">
                        <div class="copyright text-center text-lg-left text-muted">
                            &copy; 2020 <a href="https://www.creative-tim.com" class="font-weight-bold ml-1" target="_blank">Creative Tim</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com" class="nav-link" target="_blank">Creative Tim</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/presentation" class="nav-link" target="_blank">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a href="http://blog.creative-tim.com" class="nav-link" target="_blank">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://github.com/creativetimofficial/argon-dashboard/blob/master/LICENSE.md" class="nav-link" target="_blank">MIT License</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/Templates/ArgonTemp/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/Templates/ArgonTemp/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Templates/ArgonTemp/assets/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/Templates/ArgonTemp/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/Templates/ArgonTemp/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <script src="~/Templates/ArgonTemp/assets/js/argon.js?v=1.2.0"></script>

</body>

</html>
